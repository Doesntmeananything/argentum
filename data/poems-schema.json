{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Poems Collection",
    "type": "object",
    "properties": {
        "$schema": { "type": "string" },
        "poems": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "author": {
                        "type": "object",
                        "properties": {
                            "id": { "type": "string" },
                            "name": { "type": "string" }
                        },
                        "required": ["id", "name"],
                        "additionalProperties": false
                    },
                    "title": { "type": "string" },
                    "epigraph": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "text": { "type": "string" },
                    "footer": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                },
                "required": ["id", "author", "title", "text"],
                "additionalProperties": false
            }
        }
    },
    "required": ["poems"],
    "additionalProperties": false
}
