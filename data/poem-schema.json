{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Poems Collection",
    "type": "object",
    "properties": {
        "poems": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "author": {
                        "type": "object",
                        "properties": {
                            "id": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        },
                        "required": ["id", "name"]
                    },
                    "title": {
                        "type": "string"
                    },
                    "dedicatedTo": {
                        "type": "string"
                    },
                    "text": {
                        "type": "string"
                    },
                    "footer": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["id", "author", "title", "text"]
            }
        }
    },
    "required": ["poems"]
}
